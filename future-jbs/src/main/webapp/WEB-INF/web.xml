<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <servlet>
        <servlet-name>welcome</servlet-name>
        <servlet-class>com.study.servlet.create.WelcomeServlet</servlet-class>
        <init-param>
            <param-name>greeting</param-name>
            <param-value>FUCK!</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>welcome</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>outputInfo</servlet-name>
        <servlet-class>com.study.servlet.create.OutputInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>outputInfo</servlet-name>
        <url-pattern>/outputInfo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.study.servlet.create.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    
    
    <servlet>
        <servlet-name>error</servlet-name>
        <servlet-class>com.study.servlet.err.ErrorHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <error-page>
        <location>/error</location>
        <exception-type>
            javax.servlet.ServletException
        </exception-type>
    </error-page>
    <error-page>
        <location>/error</location>
        <error-code>404</error-code>
    </error-page>
</web-app>
